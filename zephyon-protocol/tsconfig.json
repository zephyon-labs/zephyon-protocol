{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "noImplicitAny": false,

    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "tests/**/*.spec.ts",
    "tests/_helpers.ts"
  ],
  "exclude": [
    "node_modules",
    "target",
    "dist-tests",
    "tests/_hold",
    "tests_legacy"
  ]
}

